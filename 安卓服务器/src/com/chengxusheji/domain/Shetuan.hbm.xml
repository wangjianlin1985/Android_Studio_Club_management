<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.chengxusheji.domain">

	<class name="Shetuan" table="Shetuan">

          <!-- 主键负责人账号 -->
          <id name="stUserName" type="string" length="20">
            <generator class="assigned"/>
          </id>

          <!-- 简单字符串属性: 登录密码 -->
          <property
            name="password"
            column="password"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 社团名称 -->
          <property
            name="shetuanName"
            column="shetuanName"
            type="string"
            length="20"
          />

          <!-- 简单图片属性: 社团logo -->
          <property
            name="shetuanPhoto"
            column="shetuanPhoto"
            type="string"
            length="50"
          />

          <!-- 简单字符串属性: 社团简介 -->
          <property
            name="shetuanDesc"
            column="shetuanDesc"
            type="string"
            length="5000"
          />

          <!-- 简单日期型属性: 成立日期 -->
          <property
            name="bornDate"
            column="bornDate"
            	type="timestamp"
            	length="10"
          />

          <!-- 简单字符串属性: 负责人 -->
          <property
            name="fuzeren"
            column="fuzeren"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 联系电话 -->
          <property
            name="telephone"
            column="telephone"
            type="string"
            length="20"
          />

          <!-- 简单字符串属性: 社团备注 -->
          <property
            name="shetuanMemo"
            column="shetuanMemo"
            type="string"
            length="800"
          />


		 
		
	</class>
	
</hibernate-mapping>
 
